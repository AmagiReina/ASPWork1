@using Homework1.Models
@model List<BookViewModel>

@{
    ViewBag.Title = "Index";
}

<h2 class="display-1">Books Page</h2>
<br />
@*Scripts.Render("~/bundles/customscripts")*@

@Html.ActionLink("Добавить новую книгу", "Create")
<br />

<table class="table table-striped">
    <thead>
        <tr>
            <th>Название книги</th>
            <th>Цена</th>
            <th>Кол-во страниц</th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr id="@item.Id" class="record">
            <td>@item.Title</td>
            <td>@item.Price</td>
            <td>@item.Pages</td>
            <td>@Html.ActionLink("Редактировать книгу", "Edit", new { @id = item.Id })</td>
            <td>@Html.ActionLink("Удалить книгу", "Delete", new { @id = item.Id })</td>
        </tr>
    }

</table>


